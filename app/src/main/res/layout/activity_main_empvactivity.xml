<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context=".excercise.home.edgarmichaelperezvaldez.MainEMPVActivity">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glStartMainEMPV"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glEndMainEMPV"
        android:orientation="vertical"
        app:layout_constraintGuide_end="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glPercentTopMainEMPV"
        app:layout_constraintGuide_percent=".2"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glPercentEndMainEMPV"
        app:layout_constraintGuide_percent=".85"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glPercentHeaderMainEMPV"
        app:layout_constraintGuide_percent=".15"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="0dp"
        android:text="Entregables para el diplomadoDesarrollo de Aplicaciones para Dispositivos Móviles 13ª emisión"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="@id/glStartMainEMPV"
        app:layout_constraintEnd_toStartOf="@id/glEndMainEMPV"
        app:layout_constraintBottom_toTopOf="@id/glPercentHeaderMainEMPV"/>

    <Button
        android:id="@+id/btnActivityOneEMPV"
        android:layout_width="0dp"
        android:text="Actividad 1"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/glStartMainEMPV"
        app:layout_constraintEnd_toStartOf="@id/glEndMainEMPV"
        app:layout_constraintTop_toBottomOf="@+id/glPercentTopMainEMPV"/>

    <Button
        android:id="@+id/btnActivityTwoEMPV"
        android:layout_width="0dp"
        android:text="Actividad 2"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/glStartMainEMPV"
        app:layout_constraintEnd_toStartOf="@id/glEndMainEMPV"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btnActivityOneEMPV"/>

    <Button
        android:id="@+id/btnHomeworkEMPV"
        android:layout_width="0dp"
        android:text="Tarea"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/glStartMainEMPV"
        app:layout_constraintEnd_toStartOf="@id/glEndMainEMPV"
        app:layout_constraintTop_toBottomOf="@+id/btnActivityTwoEMPV"/>

    <Button
        android:id="@+id/btnFinalExerciseEMPV"
        android:layout_width="0dp"
        android:enabled="false"
        android:text="Ejercicio final"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/glStartMainEMPV"
        app:layout_constraintEnd_toStartOf="@id/glEndMainEMPV"
        app:layout_constraintTop_toBottomOf="@+id/btnHomeworkEMPV"/>

    <Button
        android:id="@+id/btnExitEMPV"
        android:layout_width="0dp"
        android:text="Regresar"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/glStartMainEMPV"
        app:layout_constraintEnd_toStartOf="@id/glEndMainEMPV"
        app:layout_constraintTop_toBottomOf="@+id/glPercentEndMainEMPV"/>

</androidx.constraintlayout.widget.ConstraintLayout>