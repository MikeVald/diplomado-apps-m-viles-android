<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context=".excercise.home.edgarmichaelperezvaldez.ejercicio2.HomeExerciseTwoActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glStartETEMPV"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glEndETEMPV"
        android:orientation="vertical"
        app:layout_constraintGuide_end="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glPercentTopETEMPV"
        app:layout_constraintGuide_percent=".2"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glPercentEndETEMPV"
        app:layout_constraintGuide_percent=".85"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glPercentHeaderETEMPV"
        app:layout_constraintGuide_percent=".15"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:background="@android:color/holo_blue_dark"
        android:layout_width="wrap_content"
        android:textSize="40sp"
        android:text="Actividades"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="@id/glStartETEMPV"
        app:layout_constraintEnd_toStartOf="@id/glEndETEMPV"
        app:layout_constraintBottom_toTopOf="@id/glPercentHeaderETEMPV"/>

    <Button
        android:id="@+id/btnFLEMPV"
        android:layout_width="0dp"
        android:text="FrameLayout"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/glStartETEMPV"
        app:layout_constraintEnd_toStartOf="@id/glEndETEMPV"
        app:layout_constraintTop_toBottomOf="@+id/glPercentTopETEMPV"/>

    <Button
        android:id="@+id/btnLLEMPV"
        android:layout_width="0dp"
        android:text="LinearLayout"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/glStartETEMPV"
        app:layout_constraintEnd_toStartOf="@id/glEndETEMPV"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btnFLEMPV"/>

    <Button
        android:id="@+id/btnRLEMPV"
        android:layout_width="0dp"
        android:text="RelativeLayout"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/glStartETEMPV"
        app:layout_constraintEnd_toStartOf="@id/glEndETEMPV"
        app:layout_constraintTop_toBottomOf="@+id/btnLLEMPV"/>

    <Button
        android:id="@+id/btnCLEMPV"
        android:layout_width="0dp"
        android:text="ConstraintLayout"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/glStartETEMPV"
        app:layout_constraintEnd_toStartOf="@id/glEndETEMPV"
        app:layout_constraintTop_toBottomOf="@+id/btnRLEMPV"/>

    <Button
        android:id="@+id/btnGCEMPV"
        android:layout_width="0dp"
        android:text="Componentes GrÃ¡ficos"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/glStartETEMPV"
        app:layout_constraintEnd_toStartOf="@id/glEndETEMPV"
        app:layout_constraintTop_toBottomOf="@+id/btnCLEMPV"/>

    <Button
        android:id="@+id/btnRVEMPV"
        android:layout_width="0dp"
        android:text="RecyclerView"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/glStartETEMPV"
        app:layout_constraintEnd_toStartOf="@id/glEndETEMPV"
        app:layout_constraintTop_toBottomOf="@+id/btnGCEMPV"/>

    <Button
        android:id="@+id/btnExitEMPV"
        android:layout_width="wrap_content"
        android:text="Regresar"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/glStartETEMPV"
        app:layout_constraintEnd_toStartOf="@id/glEndETEMPV"
        app:layout_constraintTop_toBottomOf="@+id/glPercentEndETEMPV"/>

</androidx.constraintlayout.widget.ConstraintLayout>