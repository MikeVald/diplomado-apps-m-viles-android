<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainFrameLayoutEMPV"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".excercise.home.edgarmichaelperezvaldez.ejercicio2.FrameLayoutActivityEMPV">

    <TextView
        android:id="@+id/tvDogEMPV"
        android:text="Husky Siberiano"
        android:textSize="40sp"
        android:layout_marginTop="30dp"
        android:layout_gravity="top|center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvHiDogEMPV"
        android:text="Carlo Magno"
        android:textSize="30sp"
        android:layout_marginTop="100dp"
        android:layout_gravity="top|center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/husky"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/btnHiDogEMPV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="110dp"
        android:text="Saluda al perrito!"/>
    <Button
        android:id="@+id/btnExitFLEMPV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="30dp"
        android:text="Regresar"/>

</FrameLayout>